<div class="video-container">
  <video autoplay muted loop>
    <source src="videos/landingvideo.mp4" type="video/mp4" />
  </video>

  <div class="px-5 col-12 col-lg-6" style="z-index: 10">
    <h1 class="display-5 fw-bold mb-3 text-white">
      Recipes at your finger tips!
      <p class="lead my-2">
        Explore our huge selection of delicious recipe ideas including easy
        desserts, delicious vegan and vegetarian dinner ideas, gorgeous pasta
        recipes, quick bakes, family-friendly meals and gluten-free recipes.
      </p>
    </h1>
    <div
      class="my-2 d-grid gap-2 d-md-flex justify-content-md-start justify-content-start"
    >
      <a
        href="/recipes/filter/latest"
        class="btn btn-dark btn-lg px-4 me-md2"
        >Explore Latest</a
      >
      <a
        href="/recipes/filter/random"
        class="btn btn-primary btn-dark btn-lg px-4 me-md2"
        >Show Random</a
      >
    </div>
  </div>
</div>

<section class="pb-4 pt-4 px-3">
  <div class="d-flex mb-2 align-items-center">
    <h2>Categories</h2>
  </div>
  <div class="row row-cols-2 row-cols-sm-3 row-cols-md-4 row-cols-lg-6 g-2 g-lg-3">
    <% if (categories && categories.length > 0) {%> <%
    categories.forEach((category)=>{ %>
    <a
      href="/categories/<%= category.name %>"
      class="col text-center category__link"
    >
      <div class="category__img shadow">
        <img
          src="img/<%= category.image %>"
          alt="<%= category.name %> Food"
          loading="lazy"
        />
      </div>
      <div class="pt-1"><%= category.name %> Food</div>
    </a>
    <% }) %> <% }else {%>
    <p>No Items Found</p>
    <% } %>

    <a href="/categories" class="col text-center category__link">
      <div class="category__img shadow">
        <img src="img/view-all.jpg" alt="View all" loading="lazy" />
      </div>
      <div class="pt-1">View all</div>
    </a>
  </div>
</section>

